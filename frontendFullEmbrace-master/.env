# MongoDB Connection
# For local MongoDB: mongodb://localhost:27017
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net
MONGODB_URI=mongodb://localhost:27017

# Server Port
PORT=8000

# CORS Origin (Frontend URL)
# For Vite dev server, typically http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# JWT Secrets (Generate secure random strings for production)
ACCESS_TOKEN_SECRET=your_access_token_secret_key_change_this_in_production
REFRESH_TOKEN_SECRET=your_refresh_token_secret_key_change_this_in_production

# JWT Token Expiry
ACCESS_TOKEN_EXPIRY=1d
REFRESH_TOKEN_EXPIRY=10d

# Cloudinary Configuration (Optional - for image uploads)
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
